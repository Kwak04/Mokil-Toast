<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_class1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:gravity="center"
            android:text="@string/sample_class1"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nanum_square_round_bold"
            android:text="@string/text_divide_class" />


        <TextView
            android:id="@+id/tv_class2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_bold"
            android:gravity="center"
            android:text="@string/sample_class2"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_score1"
            style="@style/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_score1"
            android:textColor="@color/colorLowScore" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_score2"
            style="@style/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_score2"
            android:textColor="@color/colorHighScore" />

    </LinearLayout>

</LinearLayout>